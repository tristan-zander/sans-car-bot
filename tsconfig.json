{
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src"
  },
  "exclude": [
    "./node_modules",
    "./build"
  ]
}
