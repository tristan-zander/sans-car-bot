{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "server.ts",
    "command.ts",
    "./audio-processing/PlayManager.ts",
    "./audio-processing/Queue.ts",
    "./audio-processing/MusicPlayer.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
